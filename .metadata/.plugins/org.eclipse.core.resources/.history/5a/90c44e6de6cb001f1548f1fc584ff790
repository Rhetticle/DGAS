#include <stm32f7xx.h>
#include "ST7701.h"

extern SPI_HandleTypeDef hspi1;

HAL_StatusTypeDef lcd_command(uint8_t cmd, uint16_t arg) {
	uint8_t args[] = {arg << 8, arg};

	if (HAL_SPI_Transmit(&hspi1, &arg, sizeof(uint16_t), 100) != HAL_OK) {
		return HAL_ERROR;
	}
	return HAL_OK;
}

HAL_StatusTypeDef lcd_init(void) {
	return HAL_OK;
}
