#ifndef INC_GAUGE_H_
#define INC_GAUGE_H_

#include <stdint.h>

typedef struct {
	uint32_t min;
	uint32_t max;
	uint32_t step;
	char* units;
	char* name;
} GaugeParam;

void gauge_set_param(GaugeParam* param);
void gauge_update(GaugeParam* param);

#endif /* INC_GAUGE_H_ */
