#ifndef INC_ST7701_H_
#define INC_ST7701_H_

// Configurations commands to use via SPI interface

#define LCD_NORM_DISPLAY_ON 0x13
#define LCD_INV_OFF 0x20
#define LCD_INV_ON 0x21
#define LCD_ALL_PIX_OFF 0x22
#define LCD_ALL_PIX_ON 0x23
#define LCD_DISP_OFF 0x28
#define LCD_DISP_ON 0x29
#define LCD_MADCTL 0x36
#define LCD_IDLE_OFF 0x38
#define LCD_IDLE_ON 0x39
#define LCD_COLMOD 0x3A
#define LCD_SET_BRIGHTNESS 0x51
#define LCD_RGB_CTRL 0xC3


#endif /* INC_ST7701_H_ */
