#ifndef INC_GAUGE_H_
#define INC_GAUGE_H_

#include <stm32f7xx.h>
#include <stdint.h>
#include "OBD2.h"

typedef struct {
	uint32_t min;
	uint32_t max;
	uint32_t step;
	char* units;
	char* name;
	HAL_StatusTypeDef (*measure) (OBDBus*, uint32_t*);
} GaugeParam;

typedef struct {
	OBDBus* bus;
	GaugeParam* param;
	uint32_t max;
	float vBat;
} GaugeState;

const GaugeParam rpm = {.min = RPM_MIN, .max = RPM_MAX, .step = RPM_STEP, .units = RPM_UNITS, .name = RPM_NAME, .measure = obd2_get_rpm};


#define PARAM_MEAS_MAX_LEN 4 // maximum characters to be used to display a parameter measurement



void gauge_set_param(GaugeParam* param);
void gauge_update(GaugeState* state, uint32_t measured);

#endif /* INC_GAUGE_H_ */
